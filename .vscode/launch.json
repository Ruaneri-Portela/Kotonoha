    "version": "0.2.0",
    "configurations": [
        {
            {
                "name": "(gdb) Anexar",
                "type": "cppdbg",
                "request": "attach",
                "program": "insira o nome do programa, por exemplo ${workspaceFolder}/MakeBuilds/Kotonoha.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\msys2\\usr\\bin\\gdb",
                "setupCommands": [
                    {
                        "description": "Habilitar a reformatação automática para gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Definir Tipo de Desmontagem como Intel",
                        "text": "-gdb-set disassembly-flavor intel",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}